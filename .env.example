# Server
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/school-be

# JWT & Auth
JWT_SECRET=your_super_secret_key_change_in_production
REFRESH_SECRET=your_refresh_secret_key_change_in_production

# AWS S3 (for file uploads - college logo, etc.)
# Set these in your actual .env; do not commit real credentials.
# If a value contains + or spaces, wrap it in double quotes (e.g. AWS_SECRET_ACCESS_KEY="key+with+plus").
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=your_s3_bucket_name

# Email (enquiry notification to admin)
ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com
